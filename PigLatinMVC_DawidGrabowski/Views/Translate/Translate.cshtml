@model PigLatinMVC_DawidGrabowski.Models.English_PigLatin
@{
    ViewBag.Title = "Translate";
}

<h2>Translate English to Pig Latin</h2>
<hr />

@using (Html.BeginForm("Translate", "Translate", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.English_text, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.English_text, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">
                Translate <span class="glyphicon glyphicon-chevron-right"></span>
            </button>
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}