@model PigLatinMVC_DawidGrabowski.Models.English_PigLatin
@{
    ViewBag.Title = "Display Pig Latin";
}

<h2>Display Pig Latin</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(m => m.English_text, new { @class = "control-label" })
            <div>
                @Html.DisplayFor(m => m.English_text, new { @class = "form-control" })
            </div>
        </div>
    </div>
    
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(m => m.PigLatin_text, new { @class = "control-label" })
            <div>
                @Html.DisplayFor(m => m.PigLatin_text, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>

<div class="text-left">
    @using (Html.BeginForm("Translate", "Translate", FormMethod.Get))
    {
        <button type="submit" class="btn btn-default">Try Again &raquo;</button>
    }

    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <button type="submit" class="btn btn-default">Back to Main Menu &raquo;</button>
    }
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}